<toolSet name="External Tools">
  <tool name="sync translations" showInMainMenu="true" showInEditor="true" showInProject="true" showInSearchPopup="true" disabled="false" useConsole="true" showConsoleOnStdOut="true" showConsoleOnStdErr="true" synchronizeAfterRun="true">
    <exec>
      <option name="COMMAND" value="$USER_HOME$/Projects/scripts/sync_translations.sh" />
      <option name="PARAMETERS" value="$Prompt$" />
      <option name="WORKING_DIRECTORY" value="$USER_HOME$/Projects/scripts" />
    </exec>
  </tool>
  <tool name="eslint" showInMainMenu="false" showInEditor="false" showInProject="false" showInSearchPopup="false" disabled="true" useConsole="true" showConsoleOnStdOut="false" showConsoleOnStdErr="false" synchronizeAfterRun="true">
    <exec>
      <option name="COMMAND" value="eslint" />
      <option name="PARAMETERS" value="--fix $FileDirRelativeToProjectRoot$" />
      <option name="WORKING_DIRECTORY" value="$ProjectFileDir$" />
    </exec>
  </tool>
</toolSet>